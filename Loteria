    public void barajear(){
        Collections.shuffle(baraja);
    }
    private void mostrar(){
        for (Carta carta : baraja) {
            System.out.println(carta.toString());
        }
    }
    private void repartir(){
        int contador;
        System.out.println("");
        while (!baraja.isEmpty()){
            System.out.println("Salio: "+baraja.pop());
        }
    }
